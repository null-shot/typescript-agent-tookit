{
	"name": "@nullshot/mcp",
	"version": "0.3.6",
	"description": "Model Context Protocol (MCP) server implementation for Cloudflare Workers",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsc",
		"preinstall": "mkdir -p dist",
		"prepare": "npm run build",
		"deploy": "wrangler deploy",
		"dev": "wrangler dev",
		"start": "wrangler dev",
		"test": "vitest run",
		"lint": "echo 'No ESLint configured for this package'",
		"lint:fix": "echo 'No ESLint configured for this package'",
		"type-check": "tsc --noEmit",
		"codegen": "wrangler types -c wrangler.jsonc --env-interface Env env.d.ts"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"cloudflare",
		"workers",
		"hono",
		"ai",
		"llm"
	],
	"author": "Xava Labs",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/xava-labs/typescript-agent-framework.git"
	},
	"bugs": {
		"url": "https://github.com/xava-labs/typescript-agent-framework/issues"
	},
	"homepage": "https://xavalabs.com",
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "catalog:default",
		"@nullshot/test-utils": "workspace:*",
		"@semantic-release/git": "^10.0.1",
		"@types/node": "catalog:default",
		"http-errors": "^2.0.0",
		"raw-body": "^3.0.1",
		"semantic-release": "^23.0.0",
		"statuses": "^2.0.2",
		"typescript": "catalog:default",
		"vitest": "catalog:default",
		"wrangler": "catalog:default"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "catalog:",
		"fetch-to-node": "^2.1.0",
		"hono": "^4.7.6",
		"zod": "catalog:"
	}
}
