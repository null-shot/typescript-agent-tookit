/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "env-variable-mcp",
	"main": "src/index.ts",
	"compatibility_date": "2025-04-17",
	"compatibility_flags": [
		// ensure more compatibility with NodeJS
		// https://developers.cloudflare.com/workers/runtime-apis/nodejs/
		"nodejs_compat",
		// allows use of process.ENV for backwards compatibility of getting ENV variables
		//
		// i.e. populates the process.ENV with the ENV variables
		// https://developers.cloudflare.com/workers/configuration/compatibility-flags/#nodejs-compatibility-flag
		"nodejs_compat_populate_process_env",
	],
	"observability": {
		"enabled": true,
	},
	"vars": {
		"DEFAULT_NAME": "World",
	},
	"durable_objects": {
		"bindings": [
			{
				"name": "ENV_VARIABLE_MCP_SERVER",
				"class_name": "EnvVariableMcpServer",
			},
		],
	},
	"migrations": [
		{
			"tag": "v1",
			"new_sqlite_classes": ["EnvVariableMcpServer"],
		},
	],
}
