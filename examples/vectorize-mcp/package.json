{
  "name": "vectorize-mcp",
  "version": "1.0.0",
  "description": "MCP server for Cloudflare Vectorize - semantic search and vector operations",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"npx @modelcontextprotocol/inspector\" \"wrangler dev --experimental-vectorize-bind-to-prod\" --kill-others",
    "start": "wrangler dev --experimental-vectorize-bind-to-prod",
    "inspector": "npx @modelcontextprotocol/inspector",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "vectorize",
    "cloudflare",
    "semantic-search",
    "embeddings",
    "ai",
    "rag"
  ],
  "author": "TypeScript Agent Framework",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "catalog:",
    "@nullshot/mcp": "workspace:*",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "catalog:",
    "@cloudflare/workers-types": "catalog:",
    "@nullshot/test-utils": "workspace:*",
    "@types/node": "catalog:",
    "concurrently": "^9.1.2",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "wrangler": "catalog:"
  },
  "engines": {
    "node": ">=18"
  }
}
